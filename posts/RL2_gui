function initCanalesUI()
	-- Cabecera del panel.
	canales.header = Geyser.HBox:new({
		height = 25,
	}, canales.container)

    -- Pie del panel.
	canales.footer = Geyser.Label:new({
		name = "canales.footer",
		y = 25,
	}, canales.container)


    //barras de estado
-- Barras de Estado.
STATUS_X      = WIDTH
STATUS_Y      = 500
STATUS_WIDTH  = 200
STATUS_HEIGHT = 80